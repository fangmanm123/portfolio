<section class="project-image-right" data--60-bottom-top="opacity:0;" data-center-top="opacity:1;">
	<div class="project-image-right-container">

		<div class="project-image-right-img-container" >
				<img class="project-image-right-img" src="{{ page.url(true) }}/{{ header.project_img_r_img }}" {% if header.project_img_r_adjust %}style="padding-top:{{ header.project_img_r_adjust }};"{% endif %}>
		</div>

		<div class="project-image-right-content-container">
			<div class="project-image-right-content-inner-container">
				{{ content }}
				{% if header.project_img_r_button_link %}
					<a href="{{ header.project_img_r_button_link }}" target="_blank" class="btn btn-arrow-r">{{ header.project_img_r_button_text }}</a>
				{% endif %}
			</div>
		</div>

		<!-- <div class="project-image-right-img-container img-dsk">
				<img class="project-image-right-img" src="{{ page.url(true) }}/{{ header.project_img_r_img }}">
		</div> -->

	</div>

	<div
		class="project-image-right-background"
		style="background-image: url(' {{ page.url(true) }}/{{ header.project_img_r_background_image }}');">
	</div>
</section>
